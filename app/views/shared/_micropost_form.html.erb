<%= form_for @micropost do |f| %>
<%= render 'shared/error_messages', :object => f.object %>
<div class="field">
	<%= f.text_area :content %>
	<p id="counter"></p>
	<script type="text/javascript">
	$('#micropost_content').keyup(function () {
	    var left = 140 - $(this).val().length;

	    $('#counter').text('Characters left: ' + left);
	});
	</script>
	<div class="actions">
		<%= f.submit "Submit" %>
	</div>
</div>
<% end %>